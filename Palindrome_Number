  
  class Program{
    public static void main()
    {
      int t =121;
      IsPalindrome(t)    
    }
    public bool IsPalindrome(int x) {
        
         int reminder, temp, reverse = 0;
            temp = x;
            while(x >0)
            {
                reminder = x % 10;
                reverse = reverse * 10 + reminder;
                x /= 10;
            }
            if(temp == reverse)
            {
                return true;
            }
            else
            {
                return false;
            }
    } 
    }
